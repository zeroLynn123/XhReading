view{  
  box-sizing: border-box;  
}  
.item-box{  
  width: 700rpx;  
  margin: 0 auto;  
  padding:40rpx 0;  
}  
.items{  
  width: 100%;  
}  
page{
  display: flex;
  height: 100%;
  width: 100%;
}
.gory{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column; 
  font-style: "PingFangSC"
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
}
/* 背景图片 */
.gory_img{
  width: 100%;
  height: 340rpx;
  position: relative;
} 
.img{
  width: 100%;
  height: 100%;
}
.user{
  position: absolute;
  top: 32%;
  left: 40%;
  color: white;
  font-size: 17px;  
}
.user text{
  display: block;
  line-height: 55rpx;
}

/* 功能列表 */
.gory_list{
  height: 110rpx;
  line-height: 110rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 2px solid rgba(162,162,162,0.64);
}
.list{
  flex: 1;
  margin: 0 10px 4px;
  text-align: center;
}
.list_text{
  display: block;
  width: 100%;
  height: 100%;
  font-size: 16px;
}
.selected{
  border-bottom: 4px solid rgb(183,11,2);
}

/* 文件列表 */
.gory_file{
  flex: 1;
  overflow: auto;
  padding: 10rpx;
}
.file_container{
  display: flex;
  height: 80rpx;
  line-height: 60rpx;
  border-bottom: 1px solid rgb(210,210,218);
  padding: 10rpx 20rpx 10rpx 25rpx;
  font-size: 16px;
}
.file_container:active{
  background-color: aliceblue;
}
.file_name{
  flex: 80%;
  text-overflow : ellipsis; 
  white-space : nowrap; 
  overflow : hidden; 
}
.edit_img{
  flex: 20%;
  line-height: 80rpx;
  text-align: right;
  padding-top:5rpx;
}
.downImg,
.collectImg{
  width: 45rpx;
  height: 45rpx;
}
.downImg:first-child{
  margin-right: 25rpx;
}
/* 下载编辑 */
.edit{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 16px;
  padding: 0 25rpx;
  position: relative;
}
.allCheck view{
  display: inline-block;
} 
.allCheck image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin: 0 10rpx 5rpx 0;
}
.del{
  margin-left: 40rpx;
  color: red;
}
.editBtn{
  position: absolute;
  top: 0;
  right: 25rpx;
}
.fileCheck{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin: 10rpx 10rpx 0 0;
}
.loding{
  width:100%;
  height:100%;
  background-color:#333;
  position:absolute;
  z-index:999;
  opacity:.1;
}