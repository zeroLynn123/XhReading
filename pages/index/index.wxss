/* 首页 */
page{
  height:100%;
}
.box{
  width:100%;
  height:100%;
  border-top: 2px solid #ececec;
}
.left_box{
  width:240rpx;
  height:100%;
  color:rgb(153,153,153);
  font-size:14px;
  float: left;
  overflow: scroll;
  border-right: 1px solid #ececec;
}
.text_box{ 
  width:100%;
  text-align:center;
  height:100rpx;
  line-height:100rpx;
  border-bottom: 1px solid #ececec;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.text_box:hover{
  background-color:rgb(255,255,255); 
}  
.right_box{
  margin: 0 auto;
  width:480rpx;
  height:100%; 
  box-sizing: border-box;
  overflow:hidden;
  padding-top: 20rpx
}
.right_img{
  width:480rpx;
  height:200rpx;
  display:inline-block;
  position:relative;
  overflow:hidden;
  border-radius: 20rpx;
}
.title{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.selected{
  border-left: 4px solid rgb(183,11,2);
  color: black
}
.all_img{
  
}
.two_text{
  display:inline-block;
  height:55rpx;
  color:#fff;
  position:absolute;
  left:0;
  top:0;
  right:0;
  bottom:0;
  margin:auto;
  text-align:center; 
}
